#!/bin/sh

. /lib/functions.sh

start_wmbus() {
	local cfg="$1"
	local tty="$2"
	local mode

	config_get mode "$cfg" mode

	wmbus-repeater -d $tty $mode &
}

case "$DEVICENAME" in
	ttyUSB*)
		case "$ACTION" in
			remove*)
				killall -9 wmbus-repeater 2>&1 > /dev/null
				;;
			add*)
				config_load wmbus-repeater
				config_foreach start_wmbus wmbus-repeater "/dev/$DEVICENAME"
				;;
			*)
				;;
		esac
	;;
esac
