#!/bin/sh /etc/rc.common

NAME=wmbus-repeater

start_service() {
	local section="$1"
	local mode
	local device
	local iface

	config_get mode $section mode
	config_get device $section device
	config_get iface $section interface

	$NAME -d $device -i $iface $mode &
}

start() {
	config_load "$NAME"
	config_foreach start_service "$NAME"
}

stop() {
	killall -9 $NAME
}
